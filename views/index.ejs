    <% if (true || loggedIn) {%>  
        <form method="post" action="/courses/bySubject">
            Show Courses by Subject: 
              <input type="text" name="subject" 
                     placeholder="e.g. COSI">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/byInst">
            Show Courses by Instructor Email: 
            <input type="text" name="email" 
                   placeholder="e.g. tjhickey">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/byKeyword">
            Show Courses by Keyword: 
            <input type="text" name="keyword" 
                   placeholder="e.g. Programming">
            <input type="submit">
        </form>
        <br>
        <form method="post" action="/courses/byNum">
            Show courses by their number:
            <input type="number" name="limit"
                placeholder="e.g. 10a">
                <input type="submit">
        </form>
        <a href="/schedule/show">Show Schedule</a>
    <% } %>


